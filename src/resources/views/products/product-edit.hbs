<body data-sidebar="dark">
    <!-- Begin page -->
    <div id="layout-wrapper">

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0">Edit Product</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                        <li class="breadcrumb-item active">Edit Product</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">

                                    <div id="addproduct-nav-pills-wizard" class="twitter-bs-wizard">
                                        <ul class="twitter-bs-wizard-nav">
                                            <li class="nav-item">
                                                <a href="#basic-info" class="nav-link" data-toggle="tab">
                                                    <span class="step-number">01</span>
                                                    <span class="step-title">Basic Info</span>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#product-img" class="nav-link" data-toggle="tab">
                                                    <span class="step-number">02</span>
                                                    <span class="step-title">Product Images</span>
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content twitter-bs-wizard-tab-content">
                                            <div class="tab-pane" id="basic-info">
                                                <h4 class="card-title">Basic Information</h4>
                                                <p class="card-title-desc">Fill all information below</p>

                                                <form method="POST" action="/products/edit/{{bookByID.book_id}}">
                                                    <div class="row">
                                                        <div class="col-lg-5">
                                                            <div class="form-group">
                                                                <label for="Title">Book title</label>
                                                                <input id="Title" name="Title" type="text"
                                                                    class="form-control" value="{{bookByID.title}}">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label for="Author">Author</label>
                                                                <input id="Author" name="Author" type="text"
                                                                    class="form-control" value="{{bookByID.authors}}">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="publisher">Publisher</label>
                                                                <input id="publisher" name="publisher" type="text"
                                                                    class="form-control" value="{{bookByID.publisher}}">
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="isbn">ISBN</label>
                                                                <input id="isbn" name="isbn" type="text"
                                                                    class="form-control" value="{{bookByID.ISBN}}">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="realese-year">Release year</label>
                                                                <input id="realese-year" name="realese_year"
                                                                    type="number" class="form-control"
                                                                    value="{{bookByID.release_year}}" min="0"
                                                                    max="2099">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="price">Original price</label>
                                                                <input id="price" name="price" type="number" min="0"
                                                                    value="{{bookByID.origin_price}}"
                                                                    class="form-control">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="sale-price">Promotion price</label>
                                                                <input id="sale-price" name="sale_price" type="number"
                                                                    min="0" value="{{bookByID.price}}"
                                                                    class="form-control">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label class="control-label">Category 01 (Update
                                                                    later)</label>
                                                                <select class="form-control select2">
                                                                    <option>Self-help</option>
                                                                    <option value="SH">Self-help</option>
                                                                    <option value="FA">Fantasy</option>
                                                                    <option value="SF">Sci-Fi</option>
                                                                    <option value="MY">Mystery</option>
                                                                    <option value="TL">Thriller</option>
                                                                    <option value="RO">Romance</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label class="control-label">Category 02 (Update
                                                                    later)</label>
                                                                <select class="form-control select2">
                                                                    <option>Select</option>
                                                                    <option value="SH">Self-help</option>
                                                                    <option value="FA">Fantasy</option>
                                                                    <option value="SF">Sci-Fi</option>
                                                                    <option value="MY">Mystery</option>
                                                                    <option value="TL">Thriller</option>
                                                                    <option value="RO">Romance</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">

                                                            <div class="form-group">
                                                                <label for="page-num">Number of pages</label>
                                                                <input id="page-num" name="page_num" type="number"
                                                                    class="form-control"
                                                                    value="{{bookByID.number_of_pages}}">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">

                                                            <div class="form-group">
                                                                <label for="language">Language</label>
                                                                <input id="language" name="language" type="text"
                                                                    class="form-control" value="{{bookByID.language}}">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="productDesc">Product Description</label>
                                                        <textarea class="form-control" id="productDesc" rows="5">{{bookByID.description}}
                                                        </textarea>
                                                    </div>
                                                    <div class="d-flex justify-content-center">
                                                        <button type="submit"
                                                            class="btn btn-primary mr-2 waves-effect waves-light">
                                                            Save Changes
                                                        </button>

                                                        <a class="btn btn-secondary waves-effect"
                                                            href="/products/product-list">Cancel</a>

                                                    </div>
                                                </form>
                                            </div>
                                            <div class="tab-pane" id="product-img">
                                                <form>
                                                    <h4 class="card-title">Product Images</h4>
                                                    <p>Each product has a fixed number of photos of 4, when uploading a
                                                        new
                                                        photo, it will replace the old one</p>
                                                    <div class="product-color d-flex flex-wrap justify-content-between">
                                                        {{#each bookImgs}}
                                                        <span
                                                            class="d-flex align-items-center justify-content-center mr-2">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img src="{{img_url}}" width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <span>
                                                                <input id="formFileSm" type="file" />
                                                            </span>
                                                        </span>
                                                        {{/each}}
                                                    </div>
                                                    {{!-- <form action="/" method="post" class="dropzone">
                                                        <div class="fallback">
                                                            <input name="file" type="file" multiple />
                                                        </div>

                                                        <div class="dz-message needsclick">
                                                            <div class="mb-3">
                                                                <i
                                                                    class="display-4 text-muted ri-upload-cloud-2-line"></i>
                                                            </div>

                                                            <h4>Drop files here or click to upload.</h4>
                                                        </div>
                                                    </form> --}}
                                                    <div class="d-flex justify-content-center mt-4">
                                                        <button type="submit"
                                                            class="btn btn-primary mr-2 waves-effect waves-light">Update
                                                            images</button>

                                                        <a class="btn btn-secondary waves-effect"
                                                            href="/products/product-list">Cancel</a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->


                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <script>document.write(new Date().getFullYear())</script> © Nazox.
                            </div>
                            <div class="col-sm-6">
                                <div class="text-sm-right d-none d-sm-block">
                                    Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->
</body>