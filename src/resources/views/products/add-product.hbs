<body data-sidebar="dark">
    <!-- Begin page -->
    <div id="layout-wrapper">

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0">Add new product</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                        <li class="breadcrumb-item active">Add new product</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">

                                    <div id="addproduct-nav-pills-wizard" class="twitter-bs-wizard">
                                        <ul class="twitter-bs-wizard-nav">
                                            <li class="nav-item">
                                                <a href="#basic-info" class="nav-link" data-toggle="tab">
                                                    <span class="step-number">01</span>
                                                    <span class="step-title">Basic Info</span>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#product-img" class="nav-link" data-toggle="tab">
                                                    <span class="step-number">02</span>
                                                    <span class="step-title">Product Images</span>
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content twitter-bs-wizard-tab-content">
                                            <div class="tab-pane" id="basic-info">
                                                <h4 class="card-title">Basic Information</h4>
                                                <p class="card-title-desc">Fill all information below</p>

                                                <form method="POST" action="/products/products-add/new-product"
                                                    enctype="multipart/form-data">
                                                    <div class="row">
                                                        <div class="col-lg-5">
                                                            <div class="form-group">
                                                                <label for="Title">Book title</label>
                                                                <input id="Title" name="Title" type="text"
                                                                    class="form-control" placeholder="Quán gò đi lên">
                                                                <div id="TitleValidation"></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label for="Author">Author</label>
                                                                <input id="Author" name="Author" type="text"
                                                                    class="form-control" placeholder="Nguyễn Nhật Ánh">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="publisher">Publisher</label>
                                                                <input id="publisher" name="publisher" type="text"
                                                                    class="form-control" placeholder="NXB Tuổi Trẻ">
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="isbn">ISBN</label>
                                                                <input id="isbn" name="isbn" type="text"
                                                                    class="form-control"
                                                                    placeholder="978-3-16-148410-...">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="realese-year">Release year</label>
                                                                <input id="realese-year" name="realese_year"
                                                                    type="number" class="form-control" value="" min="0"
                                                                    max="2099" placeholder="2010">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="price">Original price</label>
                                                                <input id="price" name="price" type="number" min="0"
                                                                    placeholder="260.000đ" class="form-control">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="sale-price">Promotion price</label>
                                                                <input id="sale-price" name="sale_price" type="number"
                                                                    min="0" placeholder="300.000đ" class="form-control">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label class="control-label">Category 01</label>
                                                                <select class="form-control select2">
                                                                    <option value="English learning">English learning
                                                                    </option>
                                                                    <option value="Self-help">Self-help</option>
                                                                    <option value="Business">Business</option>
                                                                    <option value="Short stories">Short stories</option>
                                                                    <option value="Long story">Long story</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="form-group">
                                                                <label class="control-label">Category 02</label>
                                                                <select class="form-control select2">
                                                                    <option value="English learning">English learning
                                                                    </option>
                                                                    <option value="Self-help">Self-help</option>
                                                                    <option value="Business">Business</option>
                                                                    <option value="Short stories">Short stories</option>
                                                                    <option value="Long story">Long story</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">

                                                            <div class="form-group">
                                                                <label for="page-num">Number of pages</label>
                                                                <input id="page-num" name="page_num" type="number"
                                                                    class="form-control" placeholder="1000, 200, ...">
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">

                                                            <div class="form-group">
                                                                <label for="language">Language</label>
                                                                <input id="language" name="language" type="text"
                                                                    class="form-control"
                                                                    placeholder="English, vietnamese">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="productDesc">Product Description</label>
                                                        <textarea class="form-control" id="productDesc"
                                                            name="productDesc" rows="5">
                                                        </textarea>
                                                    </div>
                                                    <div class="d-flex justify-content-center">
                                                        <button type="submit"
                                                            class="btn btn-primary mr-2 waves-effect waves-light">
                                                            Save Changes
                                                        </button>

                                                        <a class="btn btn-secondary waves-effect"
                                                            href="/products/product-list">Cancel</a>

                                                    </div>
                                                </form>
                                            </div>
                                            <div class="tab-pane" id="product-img">
                                                <form method='POST' action='/products/products-add/new-product'
                                                    enctype="multipart/form-data">
                                                    <h4 class="card-title">Product Images</h4>
                                                    <p>Each product has a fixed number of photos of 4, when uploading a
                                                        new photo, it will replace the old one</p>
                                                    <div class="product-color d-flex flex-wrap justify-content-between">
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_01"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm1">
                                                                    Select image 01
                                                                    <input id="formFileSm1" type="file" name="img_1"
                                                                        hidden />
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_02"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm2">
                                                                    Select image 02
                                                                    <input id="formFileSm2" type="file" name="img_2"
                                                                        hidden />
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_03"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm3">
                                                                    Select image 03
                                                                    <input id="formFileSm3" type="file" name="img_3"
                                                                        hidden />
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_04"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm4">
                                                                    Select image 04
                                                                    <input id="formFileSm4" type="file" name="img_4"
                                                                        hidden />
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex justify-content-center mt-4">
                                                        <button type="submit"
                                                            class="btn btn-primary mr-2 waves-effect waves-light">
                                                            Save changes</button>

                                                        <a class="btn btn-secondary waves-effect"
                                                            href="/products/product-list">Cancel</a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->


                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <script>document.write(new Date().getFullYear())</script> © Nazox.
                            </div>
                            <div class="col-sm-6">
                                <div class="text-sm-right d-none d-sm-block">
                                    Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->
</body>
